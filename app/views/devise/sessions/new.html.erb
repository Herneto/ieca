<div class="jumbotron text-center ">
  <h1>Entrar - Informe os seus dados</h1>
  <p>Igreja Evangélica Congregacional em Angola - IECA</p>
  <p>Congregação de Caná</p> 
   
</div>

<div class="container">
  <div class="row text-center">   
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal col-sm-12"}) do |f| %>
        
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-4 ">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg" %>
          </div>          
        </div>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-4">
             <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
          </div> 
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
               <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>            
          </div>
        <% end -%>

        <div class="form-group">
          <div class="">
              <%= f.submit "Entrar", class: "btn btn-primary btn-lg"%>
           </div>
        </div>
     <% end %>

     <%= render "devise/shared/links" %>
  
      
    </div>
  </div>
</div>
