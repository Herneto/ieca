
<div class="alert alert-dismissable " style="display: none;">

</div>

<div class="container">
          <div class="row text-center">   
            <%= form_for(usuario, url: "/configuracao/adicionar",remote: true, :html => {:class => "form-horizontal col-sm-12"}) do |f| %>
              
                <div class="form-group">
                  <div class="col-sm-offset-4 col-sm-4 ">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg" %>
                  </div>          
                </div>
        
                <div class="form-group">
                  <div class="col-sm-offset-4 col-sm-4">
                    <label for="usuario_password">Senha</label>
                    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
                  </div> 
                </div>

                <div class="form-group">
                  <div class="col-sm-offset-4 col-sm-4">
                    <label for="usuario_password">Nivel de Acesso</label>
                    <select id="usuario_nivel" name="usuario[nivel]"class="form-control">
                        <option value="catequista">Catequista</option>
                        <option value="secretario">Secret√°rio/a</option>
                        <option value="tesoureiro">Tesoureiro</option>
                    </select>
                  </div> 
                </div>
        
                
                <div class="form-group">
                  <div class="">
                      <%= f.submit "Adicionar", class: "btn btn-primary btn-lg"%>
                  </div>
                </div>
            <% end %>          
              
          </div>
</div>

